<div ng-controller="projectController" class="project-panel">
	{{boo}}
	<div class="project-box">
		<div class="row nav-box">
			<div class="col-xs-6">
				<h1 class="nav-mike">Michael Chen</h1>
			</div>	
			<div class="col-xs-6">
				<div class="navigation">
					<ul>
						<li><a href="#">about me</a></li>
					    <li><a href="#">projects</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="row projects-list-box">
			<div class="col-xs-12">
			    <a ng-repeat="project in projects" ng-class="{'active-txt': isActive(project)}" ng-click="setActiveProject($index)"> {{project.title}}</a>
			</div>
		</div>
		<div ng-repeat="project in projects" ng-show="isActive(project)" class="row individual-project-box">
			<div class="col-md-8">
				<div class="project">
					<img ng-src="{{project.img}}" />
				</div>
			</div>
			<div class="col-md-4">
				<div class="project-desc">
					<h3>{{project.title}}</h3>
					<a href="{{project.url}}" target="_blank">visit site</a>
					<h4><b>Role:</b> {{project.role}}</h4>
					<h4><b>Tech:</b> Software Engineering (Full Stack)</h4>
					<h4>PackHire provides you with platform where you<br>
					can turn people in your network into the best<br>
					recruiters for your company</h4>
				</div>
			</div>
		</div>
		<div class="row all-projects-box">
			<div ng-repeat="project in projects"  ng-show="!isActive(project)" class="projects">
				<img style="width:100%;" ng-src="{{project.img}}" ng-click="setActiveProject($index)">
			</div>
		</div>
		
	</div>
</div>